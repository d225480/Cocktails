<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App5.Register">
    <ContentPage.Content>
        <StackLayout>
            <Label FontSize="Large" Margin="0,40,0,0" Text="Cocktail app" 
           HorizontalOptions="Center"
           VerticalOptions="Start" />
            
            <Label x:Name="debug" Text="Cocktail app" 
           HorizontalOptions="Center"
           VerticalOptions="Start" IsVisible="False" />
            
            <StackLayout  Margin="0,40,0,0"  VerticalOptions="Center" HorizontalOptions="Center">
                <Entry x:Name="user" Placeholder="username input"
            HorizontalOptions="Center"
            VerticalOptions="Center" />

                <Entry IsPassword="True" x:Name="password"  Placeholder="Password input"
               HorizontalOptions="Center"
               VerticalOptions="Center" />

                <DatePicker   x:Name="date"  BackgroundColor="Transparent" 
                TextColor="Transparent" Grid.Row="0" Opacity="0.2"></DatePicker>


                <StackLayout   VerticalOptions="Center" Orientation="Horizontal" HorizontalOptions="Center">
                    <Button Text="Register" Clicked="registeruser" />
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>